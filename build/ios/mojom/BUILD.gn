action("precompile_templates") {
  script = "precompile_templates.py"
  args = [
    "--output-dir",
    rebase_path(target_gen_dir, root_build_dir),
  ]
  sources = [
    "//express/build/ios/mojom/objc_templates/enum.tmpl",
    "//express/build/ios/mojom/objc_templates/interface_declaration.tmpl",
    "//express/build/ios/mojom/objc_templates/interface_macros.tmpl",
    "//express/build/ios/mojom/objc_templates/module+private.h.tmpl",
    "//express/build/ios/mojom/objc_templates/module.h.tmpl",
    "//express/build/ios/mojom/objc_templates/module.mm.tmpl",
    "//express/build/ios/mojom/objc_templates/private_interface_bridge_declaration.tmpl",
    "//express/build/ios/mojom/objc_templates/private_interface_bridge_implementation.tmpl",
    "//express/build/ios/mojom/objc_templates/private_interface_declaration.tmpl",
    "//express/build/ios/mojom/objc_templates/private_interface_implementation.tmpl",
    "//express/build/ios/mojom/objc_templates/private_struct_declaration.tmpl",
    "//express/build/ios/mojom/objc_templates/private_struct_implementation.tmpl",
    "//express/build/ios/mojom/objc_templates/private_union_declaration.tmpl",
    "//express/build/ios/mojom/objc_templates/private_union_implementation.tmpl",
    "//express/build/ios/mojom/objc_templates/struct_declaration.tmpl",
    "//express/build/ios/mojom/objc_templates/test_interface_declaration.tmpl",
    "//express/build/ios/mojom/objc_templates/test_interface_implementation.tmpl",
    "//express/build/ios/mojom/objc_templates/union_declaration.tmpl",
  ]
  outputs = [ "$target_gen_dir/objc_templates.zip" ]
}
