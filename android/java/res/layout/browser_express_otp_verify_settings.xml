 <ScrollView android:id="@+id/browser_express_otp_verify_settings"
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
     android:layout_height="match_parent"
     android:layout_width="match_parent">

     <LinearLayout
          android:id="@+id/layout_parent"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          android:visibility="visible">

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="20dp"
             android:paddingHorizontal="20dp"
             android:text="@string/browser_express_otp_verify_title"
             android:gravity="start"
             android:textColor="@color/news_settings_title_color"
             android:textSize="32sp"
             android:textStyle="bold" />

         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:paddingHorizontal="20dp"
             android:text="@string/browser_express_otp_verify_desc"
             android:gravity="start"
             android:textColor="@color/news_settings_title_color"
             android:textSize="16sp"
             android:textStyle="normal" />

         <EditText
             android:id="@+id/browser_express_otp"
             android:layout_width="match_parent"
             android:layout_height="48dp"
             android:layout_marginTop="20dp"
             android:layout_marginStart="20dp"
             android:layout_marginEnd="20dp"
             android:drawableStart="@drawable/lock"
             android:drawablePadding="10dp"
             android:background="@drawable/rounded_wallet_edittext"
             android:hint="@string/enter_otp"
             android:importantForAutofill="no"
             android:inputType="text"
             android:paddingEnd="18dp"
             android:paddingStart="18dp"
             android:paddingTop="10dp"
             android:paddingBottom="10dp"
             android:textCursorDrawable="@null"
             android:textSize="14sp"
             android:textColor="@color/wallet_text_color"
             android:textColorHint="@color/brave_theme_hint_text" />

         <Button
             android:id="@+id/btn_resend_otp"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:layout_marginEnd="10dp"
             android:layout_gravity="end"
             android:background="@android:color/transparent"
             android:text="@string/browser_express_resend_otp"
             android:textAllCaps="false"
             android:textColor="@color/browser_express_orange_color"
             android:textSize="14sp"
             style="?android:attr/borderlessButtonStyle"/>

          <Button
               android:id="@+id/btn_verify"
               android:layout_width="match_parent"
               android:layout_height="48dp"
               android:layout_gravity="center_horizontal"
               android:layout_marginTop="10dp"
               android:layout_marginStart="20dp"
               android:layout_marginEnd="20dp"
               android:background="@drawable/orange_rounded_bg"
               app:backgroundTint="@null"
               android:text="@string/browser_express_otp_verify_button_title"
               android:textAllCaps="false"
               android:textColor="@android:color/black"
               android:textSize="16sp"
               android:paddingVertical="4dp"
               android:paddingHorizontal="20dp"
               android:minHeight="0dp"
               style="?android:attr/borderlessButtonStyle"/>

        <TextView
             android:id="@+id/login_error_message"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:layout_gravity="center_horizontal"
             android:text=""
             android:textColor="@color/browser_express_error_color"
             android:textSize="12sp"
             android:textStyle="normal"
             android:visibility="visible"/>

       <LinearLayout
            android:id="@+id/layout_already_have__account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/browser_express_signup_account"
                android:textColor="@color/news_settings_title_color"
                android:textSize="16sp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/btn_sign_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@android:color/transparent"
                android:text="@string/browser_express_login_button_title"
                android:textAllCaps="false"
                android:textColor="@color/browser_express_orange_color"
                android:textSize="14sp"
                style="?android:attr/borderlessButtonStyle"/>

        </LinearLayout>

     </LinearLayout>
</ScrollView>
