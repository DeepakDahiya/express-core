<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/replies"
            android:textSize="16sp"
            android:textColor="@color/set_default_text_color"
            android:textStyle="bold"/>

    </androidx.appcompat.widget.Toolbar>

    <org.chromium.chrome.browser.app.shimmer.ShimmerFrameLayout
        android:id="@+id/skeleton_shimmer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/shimmer_items"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" />
    </org.chromium.chrome.browser.app.shimmer.ShimmerFrameLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/top_comment_recycler"
        android:layout_width="match_parent"
        android:nestedScrollingEnabled="false"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_replies"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"
        android:layout_marginStart="24sp"
        android:layout_marginBottom="5sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5sp"
        android:orientation="vertical"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:orientation="horizontal"
            android:layout_gravity="bottom">
            <TextView
                android:id="@+id/reply_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:textSize="12sp"
                android:textColor="@color/set_default_text_color" />

            <ImageButton android:id="@+id/cancel_btn"
                android:background="@drawable/cancel_btn"
                android:layout_width="18sp"
                android:layout_height="18sp"
                android:visibility="invisible"
                android:layout_marginStart="12sp"
                android:layout_gravity="center"
                android:contentDescription="@string/profile_image" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5sp"
            android:layout_gravity="bottom">

            <ImageView
                android:id="@+id/avatar_image"
                android:src="@drawable/btn_toolbar_profile"
                android:layout_width="32sp"
                android:layout_height="32sp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:contentDescription="@string/accessibility_toolbar_btn_brave_wallet"/>

            <EditText
                android:layout_marginStart="54dp"
                android:id="@+id/comment_content"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/button_send"
                android:inputType="textMultiLine"
                android:paddingEnd="18dp"
                android:paddingStart="18dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:maxLines="6"
                android:textSize="14sp"
                android:textColor="@color/wallet_text_color"
                android:textColorHint="@color/brave_theme_hint_text"
                android:hint="@string/type_your_comment"
                android:background="@drawable/rounded_wallet_edittext"
                tools:ignore="Autofill" />

            <ImageButton android:id="@+id/button_send"
                style="@style/ToolbarButton"
                android:background="@drawable/send"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="8sp"
                android:visibility="visible"
                android:layout_width="28sp"
                android:layout_height="28sp"
                android:contentDescription="@string/send_comment" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
