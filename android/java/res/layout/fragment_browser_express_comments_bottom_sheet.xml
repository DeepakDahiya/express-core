<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="31dp"
    android:paddingStart="22dp"
    android:paddingEnd="22dp"
    android:paddingBottom="31dp"
    android:layout_marginTop="60dp"
    android:orientation="vertical"
    tools:context=".BrowserExpressCommentsBottomSheetFragment">

    <ImageButton android:id="@+id/btn_maximize"
        style="@style/ToolbarButton"
        android:layout_marginTop="8dp"
        android:src="@drawable/maximize"
        android:layout_gravity="center"
        android:visibility="visible"
        android:contentDescription="@string/accessibility_toolbar_btn_brave_wallet" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/comments"
        android:textSize="20sp"
        android:textColor="@color/set_default_text_color"
        android:textStyle="bold"/>

    <ScrollView
        android:id="@+id/comment_section"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="28dp"
            android:orientation="horizontal">

            <android.widget.Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:textAllCaps="false"
                android:clickable="true"
                android:focusable="true"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="35dp"
                android:paddingEnd="35dp"
                android:textSize="14sp"
                android:text="@string/brave_cancel"
                android:textColor="@color/onboarding_gray" 
                style="?android:attr/borderlessButtonStyle"/>

            <android.widget.Button
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:background="@drawable/orange_rounded_button"
                app:backgroundTint="@null"
                android:text="@string/brave_next"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingStart="35dp"
                android:paddingEnd="35dp"
                android:textSize="16sp"
                style="?android:attr/borderlessButtonStyle"/>

        </LinearLayout>

    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="54dp"
        android:textSize="14sp"
        android:text="@string/browser_express_generate_username_desc"
        android:textColor="@color/set_default_text_color"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="54dp"
        android:textSize="14sp"
        android:text="@string/browser_express_generate_username_desc"
        android:textColor="@color/set_default_text_color"/>

</LinearLayout>
