import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "futures_retry"
  epoch = "0.5"
  crate_type = "rlib"
  crate_root = "crate/src/lib.rs"
  sources = [
    "//express/third_party/rust/futures_retry/v0_5/crate/examples/tcp-client-complex.rs",
    "//express/third_party/rust/futures_retry/v0_5/crate/examples/tcp-client.rs",
    "//express/third_party/rust/futures_retry/v0_5/crate/examples/tcp-listener-complex.rs",
    "//express/third_party/rust/futures_retry/v0_5/crate/examples/tcp-listener.rs",
    "//express/third_party/rust/futures_retry/v0_5/crate/src/error_handler.rs",
    "//express/third_party/rust/futures_retry/v0_5/crate/src/future.rs",
    "//express/third_party/rust/futures_retry/v0_5/crate/src/lib.rs",
    "//express/third_party/rust/futures_retry/v0_5/crate/src/stream.rs",
  ]
  inputs = [ "//express/third_party/rust/futures_retry/v0_5/crate/README.md" ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2018"
  cargo_pkg_version = "0.5.0"
  cargo_pkg_authors = "mexus <gilaldpellaeon@gmail.com>"
  cargo_pkg_name = "futures-retry"
  cargo_pkg_description = "Retry your Futures and Streams!"
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  deps = [
    "//express/third_party/rust/futures/v0_3:lib",
    "//express/third_party/rust/futures_timer/v3:lib",
    "//express/third_party/rust/pin_project/v0_4:lib",
  ]
}
