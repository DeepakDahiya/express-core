import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "iana_time_zone"
  epoch = "0.1"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//express/third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"
  sources = [
    "//express/third_party/rust/iana_time_zone/v0_1/crate/examples/get_timezone.rs",
    "//express/third_party/rust/iana_time_zone/v0_1/crate/examples/stress-test.rs",
    "//express/third_party/rust/iana_time_zone/v0_1/crate/src/ffi_utils.rs",
    "//express/third_party/rust/iana_time_zone/v0_1/crate/src/lib.rs",
    "//express/third_party/rust/iana_time_zone/v0_1/crate/src/platform.rs",
    "//express/third_party/rust/iana_time_zone/v0_1/crate/src/tz_android.rs",
    "//express/third_party/rust/iana_time_zone/v0_1/crate/src/tz_freebsd.rs",
    "//express/third_party/rust/iana_time_zone/v0_1/crate/src/tz_haiku.rs",
    "//express/third_party/rust/iana_time_zone/v0_1/crate/src/tz_illumos.rs",
    "//express/third_party/rust/iana_time_zone/v0_1/crate/src/tz_linux.rs",
    "//express/third_party/rust/iana_time_zone/v0_1/crate/src/tz_macos.rs",
    "//express/third_party/rust/iana_time_zone/v0_1/crate/src/tz_netbsd.rs",
    "//express/third_party/rust/iana_time_zone/v0_1/crate/src/tz_wasm32.rs",
    "//express/third_party/rust/iana_time_zone/v0_1/crate/src/tz_windows.rs",
  ]
  inputs = [
    "//express/third_party/rust/iana_time_zone/v0_1/crate/CHANGELOG.md",
    "//express/third_party/rust/iana_time_zone/v0_1/crate/README.md",
  ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2018"
  cargo_pkg_version = "0.1.54"
  cargo_pkg_authors = "Andrew Straw <strawman@astraw.com>, Ren√© Kijewski <rene.kijewski@fu-berlin.de>, Ryan Lopopolo <rjl@hyperbo.la>"
  cargo_pkg_name = "iana-time-zone"
  cargo_pkg_description = "get the IANA time zone for the current system"
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  deps = []
  if (is_android) {
    deps += [ "//express/third_party/rust/android_system_properties/v0_1:lib" ]
  }
  if (is_ios) {
    deps += [ "//express/third_party/rust/core_foundation_sys/v0_8:lib" ]
  }
  if (is_win) {
    deps += [ "//express/third_party/rust/windows/v0_46:lib" ]
  }
  features = [ "fallback" ]
  if (is_mac) {
    deps += [ "//express/third_party/rust/core_foundation_sys/v0_8:lib" ]
  }
}
