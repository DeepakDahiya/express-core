import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "selectors"
  epoch = "0.23"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//express/third_party/rust/*" ]
  crate_root = "crate/lib.rs"
  sources = [
    "//express/third_party/rust/selectors/v0_23/crate/attr.rs",
    "//express/third_party/rust/selectors/v0_23/crate/bloom.rs",
    "//express/third_party/rust/selectors/v0_23/crate/build.rs",
    "//express/third_party/rust/selectors/v0_23/crate/builder.rs",
    "//express/third_party/rust/selectors/v0_23/crate/context.rs",
    "//express/third_party/rust/selectors/v0_23/crate/lib.rs",
    "//express/third_party/rust/selectors/v0_23/crate/matching.rs",
    "//express/third_party/rust/selectors/v0_23/crate/nth_index_cache.rs",
    "//express/third_party/rust/selectors/v0_23/crate/parser.rs",
    "//express/third_party/rust/selectors/v0_23/crate/sink.rs",
    "//express/third_party/rust/selectors/v0_23/crate/tree.rs",
    "//express/third_party/rust/selectors/v0_23/crate/visitor.rs",
  ]
  inputs = [ "//express/third_party/rust/selectors/v0_23/crate/README.md" ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2015"
  cargo_pkg_version = "0.23.0"
  cargo_pkg_authors = "The Servo Project Developers"
  cargo_pkg_name = "selectors"
  cargo_pkg_description = "CSS Selectors matching for Rust"
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  deps = [
    "//express/third_party/rust/cssparser/v0_28:lib",
    "//express/third_party/rust/derive_more/v0_99:lib",
    "//express/third_party/rust/fxhash/v0_2:lib",
    "//express/third_party/rust/phf/v0_8:lib",
    "//express/third_party/rust/precomputed_hash/v0_1:lib",
    "//express/third_party/rust/servo_arc/v0_1:lib",
    "//express/third_party/rust/smallvec/v1:lib",
    "//third_party/rust/bitflags/v1:lib",
    "//third_party/rust/log/v0_4:lib",
  ]
  build_deps = [ "//express/third_party/rust/phf_codegen/v0_8:buildrs_support" ]
  build_root = "crate/build.rs"
  build_sources = [ "crate/build.rs" ]
  build_script_outputs = [ "ascii_case_insensitive_html_attributes.rs" ]
}
