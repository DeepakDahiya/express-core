import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "html5ever"
  epoch = "0.25"
  crate_type = "rlib"
  crate_root = "crate/src/lib.rs"
  sources = [
    "//express/third_party/rust/html5ever/v0_25/crate/benches/html5ever.rs",
    "//express/third_party/rust/html5ever/v0_25/crate/build.rs",
    "//express/third_party/rust/html5ever/v0_25/crate/examples/arena.rs",
    "//express/third_party/rust/html5ever/v0_25/crate/examples/noop-tokenize.rs",
    "//express/third_party/rust/html5ever/v0_25/crate/examples/noop-tree-builder.rs",
    "//express/third_party/rust/html5ever/v0_25/crate/examples/print-tree-actions.rs",
    "//express/third_party/rust/html5ever/v0_25/crate/examples/tokenize.rs",
    "//express/third_party/rust/html5ever/v0_25/crate/macros/match_token.rs",
    "//express/third_party/rust/html5ever/v0_25/crate/src/driver.rs",
    "//express/third_party/rust/html5ever/v0_25/crate/src/lib.rs",
    "//express/third_party/rust/html5ever/v0_25/crate/src/macros.rs",
    "//express/third_party/rust/html5ever/v0_25/crate/src/serialize/mod.rs",
    "//express/third_party/rust/html5ever/v0_25/crate/src/tokenizer/char_ref/mod.rs",
    "//express/third_party/rust/html5ever/v0_25/crate/src/tokenizer/interface.rs",
    "//express/third_party/rust/html5ever/v0_25/crate/src/tokenizer/mod.rs",
    "//express/third_party/rust/html5ever/v0_25/crate/src/tokenizer/states.rs",
    "//express/third_party/rust/html5ever/v0_25/crate/src/tree_builder/data.rs",
    "//express/third_party/rust/html5ever/v0_25/crate/src/tree_builder/mod.rs",
    "//express/third_party/rust/html5ever/v0_25/crate/src/tree_builder/rules.rs",
    "//express/third_party/rust/html5ever/v0_25/crate/src/tree_builder/tag_sets.rs",
    "//express/third_party/rust/html5ever/v0_25/crate/src/tree_builder/types.rs",
    "//express/third_party/rust/html5ever/v0_25/crate/src/util/str.rs",
  ]
  inputs = []

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2018"
  cargo_pkg_version = "0.25.1"
  cargo_pkg_authors = "The html5ever Project Developers"
  cargo_pkg_name = "html5ever"
  cargo_pkg_description = "High-performance browser-grade HTML5 parser"
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  deps = [
    "//express/third_party/rust/mac/v0_1:lib",
    "//express/third_party/rust/markup5ever/v0_10:lib",
    "//third_party/rust/log/v0_4:lib",
  ]
  build_deps = [
    "//third_party/rust/proc_macro2/v1:lib",
    "//third_party/rust/quote/v1:lib",
    "//third_party/rust/syn/v1:lib",
  ]
  build_root = "crate/build.rs"
  build_sources = [
    "crate/build.rs",
    "crate/macros/match_token.rs",
  ]
  build_script_outputs = [ "rules.rs" ]
  cargo_manifest_dir =
      rebase_path("//express/third_party/rust/html5ever/v0_25/crate")
  rustenv = [ "CARGO_MANIFEST_DIR=$cargo_manifest_dir" ]
}
