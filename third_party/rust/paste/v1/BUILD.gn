import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "paste"
  epoch = "1"
  crate_type = "proc-macro"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//express/third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"
  sources = [
    "//express/third_party/rust/paste/v1/crate/build.rs",
    "//express/third_party/rust/paste/v1/crate/src/attr.rs",
    "//express/third_party/rust/paste/v1/crate/src/error.rs",
    "//express/third_party/rust/paste/v1/crate/src/lib.rs",
    "//express/third_party/rust/paste/v1/crate/src/segment.rs",
    "//express/third_party/rust/paste/v1/crate/tests/compiletest.rs",
    "//express/third_party/rust/paste/v1/crate/tests/test_attr.rs",
    "//express/third_party/rust/paste/v1/crate/tests/test_doc.rs",
    "//express/third_party/rust/paste/v1/crate/tests/test_expr.rs",
    "//express/third_party/rust/paste/v1/crate/tests/test_item.rs",
    "//express/third_party/rust/paste/v1/crate/tests/ui/case-warning.rs",
    "//express/third_party/rust/paste/v1/crate/tests/ui/env-empty.rs",
    "//express/third_party/rust/paste/v1/crate/tests/ui/env-non-string.rs",
    "//express/third_party/rust/paste/v1/crate/tests/ui/env-suffix.rs",
    "//express/third_party/rust/paste/v1/crate/tests/ui/env-unexpected.rs",
    "//express/third_party/rust/paste/v1/crate/tests/ui/invalid-ident.rs",
    "//express/third_party/rust/paste/v1/crate/tests/ui/missing-paren-on-env.rs",
    "//express/third_party/rust/paste/v1/crate/tests/ui/no-env-var.rs",
    "//express/third_party/rust/paste/v1/crate/tests/ui/no-ident-after-colon.rs",
    "//express/third_party/rust/paste/v1/crate/tests/ui/unexpected-group.rs",
    "//express/third_party/rust/paste/v1/crate/tests/ui/unexpected-modifier.rs",
    "//express/third_party/rust/paste/v1/crate/tests/ui/unexpected-punct.rs",
    "//express/third_party/rust/paste/v1/crate/tests/ui/unsupported-literal.rs",
    "//express/third_party/rust/paste/v1/crate/tests/ui/unsupported-modifier.rs",
  ]
  inputs = [ "//express/third_party/rust/paste/v1/crate/README.md" ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2018"
  cargo_pkg_version = "1.0.12"
  cargo_pkg_authors = "David Tolnay <dtolnay@gmail.com>"
  cargo_pkg_name = "paste"
  cargo_pkg_description = "Macros for all your token pasting needs"
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  build_root = "crate/build.rs"
  build_sources = [ "crate/build.rs" ]
}
