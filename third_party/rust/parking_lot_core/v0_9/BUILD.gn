import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "parking_lot_core"
  epoch = "0.9"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//express/third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"
  sources = [
    "//express/third_party/rust/parking_lot_core/v0_9/crate/build.rs",
    "//express/third_party/rust/parking_lot_core/v0_9/crate/src/lib.rs",
    "//express/third_party/rust/parking_lot_core/v0_9/crate/src/parking_lot.rs",
    "//express/third_party/rust/parking_lot_core/v0_9/crate/src/spinwait.rs",
    "//express/third_party/rust/parking_lot_core/v0_9/crate/src/thread_parker/generic.rs",
    "//express/third_party/rust/parking_lot_core/v0_9/crate/src/thread_parker/linux.rs",
    "//express/third_party/rust/parking_lot_core/v0_9/crate/src/thread_parker/mod.rs",
    "//express/third_party/rust/parking_lot_core/v0_9/crate/src/thread_parker/redox.rs",
    "//express/third_party/rust/parking_lot_core/v0_9/crate/src/thread_parker/sgx.rs",
    "//express/third_party/rust/parking_lot_core/v0_9/crate/src/thread_parker/unix.rs",
    "//express/third_party/rust/parking_lot_core/v0_9/crate/src/thread_parker/wasm.rs",
    "//express/third_party/rust/parking_lot_core/v0_9/crate/src/thread_parker/wasm_atomic.rs",
    "//express/third_party/rust/parking_lot_core/v0_9/crate/src/thread_parker/windows/keyed_event.rs",
    "//express/third_party/rust/parking_lot_core/v0_9/crate/src/thread_parker/windows/mod.rs",
    "//express/third_party/rust/parking_lot_core/v0_9/crate/src/thread_parker/windows/waitaddress.rs",
    "//express/third_party/rust/parking_lot_core/v0_9/crate/src/util.rs",
    "//express/third_party/rust/parking_lot_core/v0_9/crate/src/word_lock.rs",
  ]
  inputs = []

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2018"
  cargo_pkg_version = "0.9.7"
  cargo_pkg_authors = "Amanieu d'Antras <amanieu@gmail.com>"
  cargo_pkg_name = "parking_lot_core"
  cargo_pkg_description =
      "An advanced API for creating custom synchronization primitives."
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  deps = [
    "//express/third_party/rust/smallvec/v1:lib",
    "//third_party/rust/cfg_if/v1:lib",
  ]
  if (!is_win) {
    deps += [ "//third_party/rust/libc/v0_2:lib" ]
  }
  if (is_win) {
    deps += [ "//express/third_party/rust/windows_sys/v0_45:lib" ]
  }
  build_root = "crate/build.rs"
  build_sources = [ "crate/build.rs" ]
}
