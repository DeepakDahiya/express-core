import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "generic_array"
  epoch = "0.14"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//express/third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"
  sources = [
    "//express/third_party/rust/generic_array/v0_14/crate/build.rs",
    "//express/third_party/rust/generic_array/v0_14/crate/src/arr.rs",
    "//express/third_party/rust/generic_array/v0_14/crate/src/functional.rs",
    "//express/third_party/rust/generic_array/v0_14/crate/src/hex.rs",
    "//express/third_party/rust/generic_array/v0_14/crate/src/impl_serde.rs",
    "//express/third_party/rust/generic_array/v0_14/crate/src/impl_zeroize.rs",
    "//express/third_party/rust/generic_array/v0_14/crate/src/impls.rs",
    "//express/third_party/rust/generic_array/v0_14/crate/src/iter.rs",
    "//express/third_party/rust/generic_array/v0_14/crate/src/lib.rs",
    "//express/third_party/rust/generic_array/v0_14/crate/src/sequence.rs",
  ]
  inputs = [
    "//express/third_party/rust/generic_array/v0_14/crate/CHANGELOG.md",
    "//express/third_party/rust/generic_array/v0_14/crate/README.md",
  ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2015"
  cargo_pkg_version = "0.14.6"
  cargo_pkg_authors = "Bartłomiej Kamiński <fizyk20@gmail.com>, Aaron Trent <novacrazy@gmail.com>"
  cargo_pkg_name = "generic-array"
  cargo_pkg_description = "Generic types implementing functionality of arrays"
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  deps = [ "//express/third_party/rust/typenum/v1:lib" ]
  build_deps = [ "//express/third_party/rust/version_check/v0_9:buildrs_support" ]
  features = [ "more_lengths" ]
  build_root = "crate/build.rs"
  build_sources = [ "crate/build.rs" ]
}
