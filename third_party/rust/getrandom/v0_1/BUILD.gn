import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "getrandom"
  epoch = "0.1"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//express/third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"
  sources = [
    "//express/third_party/rust/getrandom/v0_1/crate/benches/mod.rs",
    "//express/third_party/rust/getrandom/v0_1/crate/build.rs",
    "//express/third_party/rust/getrandom/v0_1/crate/src/bsd_arandom.rs",
    "//express/third_party/rust/getrandom/v0_1/crate/src/cloudabi.rs",
    "//express/third_party/rust/getrandom/v0_1/crate/src/dummy.rs",
    "//express/third_party/rust/getrandom/v0_1/crate/src/error.rs",
    "//express/third_party/rust/getrandom/v0_1/crate/src/error_impls.rs",
    "//express/third_party/rust/getrandom/v0_1/crate/src/fuchsia.rs",
    "//express/third_party/rust/getrandom/v0_1/crate/src/ios.rs",
    "//express/third_party/rust/getrandom/v0_1/crate/src/lib.rs",
    "//express/third_party/rust/getrandom/v0_1/crate/src/linux_android.rs",
    "//express/third_party/rust/getrandom/v0_1/crate/src/macos.rs",
    "//express/third_party/rust/getrandom/v0_1/crate/src/openbsd.rs",
    "//express/third_party/rust/getrandom/v0_1/crate/src/rdrand.rs",
    "//express/third_party/rust/getrandom/v0_1/crate/src/solaris_illumos.rs",
    "//express/third_party/rust/getrandom/v0_1/crate/src/use_file.rs",
    "//express/third_party/rust/getrandom/v0_1/crate/src/util.rs",
    "//express/third_party/rust/getrandom/v0_1/crate/src/util_libc.rs",
    "//express/third_party/rust/getrandom/v0_1/crate/src/vxworks.rs",
    "//express/third_party/rust/getrandom/v0_1/crate/src/wasi.rs",
    "//express/third_party/rust/getrandom/v0_1/crate/src/wasm32_bindgen.rs",
    "//express/third_party/rust/getrandom/v0_1/crate/src/wasm32_stdweb.rs",
    "//express/third_party/rust/getrandom/v0_1/crate/src/windows.rs",
    "//express/third_party/rust/getrandom/v0_1/crate/src/windows_uwp.rs",
    "//express/third_party/rust/getrandom/v0_1/crate/tests/common.rs",
  ]
  inputs = [
    "//express/third_party/rust/getrandom/v0_1/crate/CHANGELOG.md",
    "//express/third_party/rust/getrandom/v0_1/crate/README.md",
  ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2018"
  cargo_pkg_version = "0.1.16"
  cargo_pkg_authors = "The Rand Project Developers"
  cargo_pkg_name = "getrandom"
  cargo_pkg_description = "A small cross-platform library for retrieving random data from system source"
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  deps = [ "//third_party/rust/cfg_if/v1:lib" ]
  if (!is_win) {
    deps += [ "//third_party/rust/libc/v0_2:lib" ]
  }
  features = [ "std" ]
  build_root = "crate/build.rs"
  build_sources = [ "crate/build.rs" ]
}
