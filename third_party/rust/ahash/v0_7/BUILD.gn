import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "ahash"
  epoch = "0.7"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//express/third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"
  sources = [
    "//express/third_party/rust/ahash/v0_7/crate/build.rs",
    "//express/third_party/rust/ahash/v0_7/crate/src/aes_hash.rs",
    "//express/third_party/rust/ahash/v0_7/crate/src/convert.rs",
    "//express/third_party/rust/ahash/v0_7/crate/src/fallback_hash.rs",
    "//express/third_party/rust/ahash/v0_7/crate/src/hash_map.rs",
    "//express/third_party/rust/ahash/v0_7/crate/src/hash_quality_test.rs",
    "//express/third_party/rust/ahash/v0_7/crate/src/hash_set.rs",
    "//express/third_party/rust/ahash/v0_7/crate/src/lib.rs",
    "//express/third_party/rust/ahash/v0_7/crate/src/operations.rs",
    "//express/third_party/rust/ahash/v0_7/crate/src/random_state.rs",
    "//express/third_party/rust/ahash/v0_7/crate/src/specialize.rs",
    "//express/third_party/rust/ahash/v0_7/crate/tests/bench.rs",
    "//express/third_party/rust/ahash/v0_7/crate/tests/map_tests.rs",
    "//express/third_party/rust/ahash/v0_7/crate/tests/nopanic.rs",
  ]
  inputs = [
    "//express/third_party/rust/ahash/v0_7/crate/FAQ.md",
    "//express/third_party/rust/ahash/v0_7/crate/README.md",
  ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2018"
  cargo_pkg_version = "0.7.6"
  cargo_pkg_authors = "Tom Kaitchuck <Tom.Kaitchuck@gmail.com>"
  cargo_pkg_name = "ahash"
  cargo_pkg_description =
      "A non-cryptographic hash function using AES-NI for high performance"
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  deps = [ "//express/third_party/rust/once_cell/v1:lib" ]
  if (is_linux || is_chromeos || is_android || is_win || is_ios || is_fuchsia) {
    deps += [ "//third_party/rust/getrandom/v0_2:lib" ]
  }
  build_deps = [ "//express/third_party/rust/version_check/v0_9:buildrs_support" ]
  build_root = "crate/./build.rs"
  build_sources = [ "crate/./build.rs" ]
}
