import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "uuid"
  epoch = "1"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//express/third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"
  sources = [
    "//express/third_party/rust/uuid/v1/crate/benches/format_str.rs",
    "//express/third_party/rust/uuid/v1/crate/benches/parse_str.rs",
    "//express/third_party/rust/uuid/v1/crate/benches/v4.rs",
    "//express/third_party/rust/uuid/v1/crate/examples/random_uuid.rs",
    "//express/third_party/rust/uuid/v1/crate/examples/sortable_uuid.rs",
    "//express/third_party/rust/uuid/v1/crate/examples/uuid_macro.rs",
    "//express/third_party/rust/uuid/v1/crate/examples/windows_guid.rs",
    "//express/third_party/rust/uuid/v1/crate/src/builder.rs",
    "//express/third_party/rust/uuid/v1/crate/src/error.rs",
    "//express/third_party/rust/uuid/v1/crate/src/external.rs",
    "//express/third_party/rust/uuid/v1/crate/src/external/arbitrary_support.rs",
    "//express/third_party/rust/uuid/v1/crate/src/external/serde_support.rs",
    "//express/third_party/rust/uuid/v1/crate/src/external/slog_support.rs",
    "//express/third_party/rust/uuid/v1/crate/src/fmt.rs",
    "//express/third_party/rust/uuid/v1/crate/src/lib.rs",
    "//express/third_party/rust/uuid/v1/crate/src/macros.rs",
    "//express/third_party/rust/uuid/v1/crate/src/md5.rs",
    "//express/third_party/rust/uuid/v1/crate/src/parser.rs",
    "//express/third_party/rust/uuid/v1/crate/src/rng.rs",
    "//express/third_party/rust/uuid/v1/crate/src/sha1.rs",
    "//express/third_party/rust/uuid/v1/crate/src/timestamp.rs",
    "//express/third_party/rust/uuid/v1/crate/src/v1.rs",
    "//express/third_party/rust/uuid/v1/crate/src/v3.rs",
    "//express/third_party/rust/uuid/v1/crate/src/v4.rs",
    "//express/third_party/rust/uuid/v1/crate/src/v5.rs",
    "//express/third_party/rust/uuid/v1/crate/src/v6.rs",
    "//express/third_party/rust/uuid/v1/crate/src/v7.rs",
    "//express/third_party/rust/uuid/v1/crate/src/v8.rs",
    "//express/third_party/rust/uuid/v1/crate/tests/macros.rs",
    "//express/third_party/rust/uuid/v1/crate/tests/ui/compile_fail/invalid_parse.rs",
    "//express/third_party/rust/uuid/v1/crate/tests/ui/compile_pass/renamed.rs",
    "//express/third_party/rust/uuid/v1/crate/tests/ui/compile_pass/valid.rs",
  ]
  inputs = [
    "//express/third_party/rust/uuid/v1/crate/CODE_OF_CONDUCT.md",
    "//express/third_party/rust/uuid/v1/crate/CONTRIBUTING.md",
    "//express/third_party/rust/uuid/v1/crate/README.md",
  ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2018"
  cargo_pkg_version = "1.3.0"
  cargo_pkg_authors = "Ashley Mannix<ashleymannix@live.com.au>, Christopher Armstrong, Dylan DPC<dylan.dpc@gmail.com>, Hunar Roop Kahlon<hunar.roop@gmail.com>"
  cargo_pkg_name = "uuid"
  cargo_pkg_description = "A library to generate and parse UUIDs."
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  deps = [ "//third_party/rust/getrandom/v0_2:lib" ]
  features = [
    "getrandom",
    "rng",
    "std",
    "v4",
  ]
}
