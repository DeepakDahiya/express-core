import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "num_bigint"
  epoch = "0.3"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//express/third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"
  sources = [
    "//express/third_party/rust/num_bigint/v0_3/crate/benches/bigint.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/benches/factorial.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/benches/gcd.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/benches/roots.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/benches/shootout-pidigits.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/build.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/src/bigint.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/src/bigint/addition.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/src/bigint/arbitrary.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/src/bigint/bits.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/src/bigint/convert.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/src/bigint/division.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/src/bigint/multiplication.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/src/bigint/power.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/src/bigint/serde.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/src/bigint/shift.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/src/bigint/subtraction.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/src/bigrand.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/src/biguint.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/src/biguint/addition.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/src/biguint/arbitrary.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/src/biguint/bits.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/src/biguint/convert.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/src/biguint/division.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/src/biguint/iter.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/src/biguint/monty.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/src/biguint/multiplication.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/src/biguint/power.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/src/biguint/serde.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/src/biguint/shift.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/src/biguint/subtraction.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/src/lib.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/src/macros.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/tests/bigint.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/tests/bigint_bitwise.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/tests/bigint_scalar.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/tests/biguint.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/tests/biguint_scalar.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/tests/consts/mod.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/tests/macros/mod.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/tests/modpow.rs",
    "//express/third_party/rust/num_bigint/v0_3/crate/tests/roots.rs",
  ]
  inputs = [
    "//express/third_party/rust/num_bigint/v0_3/crate/README.md",
    "//express/third_party/rust/num_bigint/v0_3/crate/RELEASES.md",
  ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2018"
  cargo_pkg_version = "0.3.3"
  cargo_pkg_authors = "The Rust Project Developers"
  cargo_pkg_name = "num-bigint"
  cargo_pkg_description = "Big integer implementation for Rust"
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  deps = [
    "//express/third_party/rust/num_integer/v0_1:lib",
    "//express/third_party/rust/num_traits/v0_2:lib",
  ]
  build_deps = [ "//third_party/rust/autocfg/v1:buildrs_support" ]
  features = [ "std" ]
  build_root = "crate/build.rs"
  build_sources = [ "crate/build.rs" ]
  build_script_outputs = [ "radix_bases.rs" ]
  rustflags = [
    "--cfg",
    "has_try_from",
  ]
  if (current_cpu == "arm64" || current_cpu == "x64") {
    rustflags += [
      "--cfg",
      "u64_digit",
    ]
  }
}
