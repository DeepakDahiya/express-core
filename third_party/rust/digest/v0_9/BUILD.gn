import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "digest"
  epoch = "0.9"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//express/third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"
  sources = [
    "//express/third_party/rust/digest/v0_9/crate/src/dev.rs",
    "//express/third_party/rust/digest/v0_9/crate/src/digest.rs",
    "//express/third_party/rust/digest/v0_9/crate/src/dyn_digest.rs",
    "//express/third_party/rust/digest/v0_9/crate/src/errors.rs",
    "//express/third_party/rust/digest/v0_9/crate/src/fixed.rs",
    "//express/third_party/rust/digest/v0_9/crate/src/lib.rs",
    "//express/third_party/rust/digest/v0_9/crate/src/variable.rs",
    "//express/third_party/rust/digest/v0_9/crate/src/xof.rs",
  ]
  inputs = [
    "//express/third_party/rust/digest/v0_9/crate/CHANGELOG.md",
    "//express/third_party/rust/digest/v0_9/crate/README.md",
  ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2018"
  cargo_pkg_version = "0.9.0"
  cargo_pkg_authors = "RustCrypto Developers"
  cargo_pkg_name = "digest"
  cargo_pkg_description = "Traits for cryptographic hash functions"
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  deps = [ "//express/third_party/rust/generic_array/v0_14:lib" ]
  features = [
    "alloc",
    "std",
  ]
}
