import("//build/rust/cargo_crate.gni")

cargo_crate("lib") {
  crate_name = "digest"
  epoch = "0.10"
  crate_type = "rlib"

  # Only for usage from third-party crates. Add the crate to
  # third_party.toml to use it from first-party code.
  visibility = [ "//express/third_party/rust/*" ]
  crate_root = "crate/src/lib.rs"
  sources = [
    "//express/third_party/rust/digest/v0_10/crate/src/core_api.rs",
    "//express/third_party/rust/digest/v0_10/crate/src/core_api/ct_variable.rs",
    "//express/third_party/rust/digest/v0_10/crate/src/core_api/rt_variable.rs",
    "//express/third_party/rust/digest/v0_10/crate/src/core_api/wrapper.rs",
    "//express/third_party/rust/digest/v0_10/crate/src/core_api/xof_reader.rs",
    "//express/third_party/rust/digest/v0_10/crate/src/dev.rs",
    "//express/third_party/rust/digest/v0_10/crate/src/dev/fixed.rs",
    "//express/third_party/rust/digest/v0_10/crate/src/dev/mac.rs",
    "//express/third_party/rust/digest/v0_10/crate/src/dev/rng.rs",
    "//express/third_party/rust/digest/v0_10/crate/src/dev/variable.rs",
    "//express/third_party/rust/digest/v0_10/crate/src/dev/xof.rs",
    "//express/third_party/rust/digest/v0_10/crate/src/digest.rs",
    "//express/third_party/rust/digest/v0_10/crate/src/lib.rs",
    "//express/third_party/rust/digest/v0_10/crate/src/mac.rs",
  ]
  inputs = [
    "//express/third_party/rust/digest/v0_10/crate/CHANGELOG.md",
    "//express/third_party/rust/digest/v0_10/crate/README.md",
  ]

  # Unit tests skipped. Generate with --with-tests to include them.
  build_native_rust_unit_tests = false
  edition = "2018"
  cargo_pkg_version = "0.10.6"
  cargo_pkg_authors = "RustCrypto Developers"
  cargo_pkg_name = "digest"
  cargo_pkg_description =
      "Traits for cryptographic hash functions and message authentication codes"
  library_configs -= [ "//build/config/compiler:chromium_code" ]
  library_configs += [ "//build/config/compiler:no_chromium_code" ]
  executable_configs -= [ "//build/config/compiler:chromium_code" ]
  executable_configs += [ "//build/config/compiler:no_chromium_code" ]
  deps = [
    "//express/third_party/rust/block_buffer/v0_10:lib",
    "//express/third_party/rust/crypto_common/v0_1:lib",
    "//express/third_party/rust/subtle/v2:lib",
  ]
  features = [
    "alloc",
    "block-buffer",
    "core-api",
    "mac",
    "std",
    "subtle",
  ]
}
