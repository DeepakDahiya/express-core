import("//express/components/ai_chat/common/buildflags/buildflags.gni")
import("//express/components/brave_webtorrent/browser/buildflags/buildflags.gni")
import("//build/config/ui.gni")

group("ui") {
  deps = [ "//express/components/brave_vpn/common/buildflags" ]

  if (toolkit_views) {
    deps += [
      "//express/components/ai_chat/common/buildflags",
      "//express/components/sidebar",
    ]

    if (enable_ai_chat) {
      deps += [
        "//express/components/ai_chat/browser",
        "//express/components/ai_chat/common",
        "//express/components/ai_chat/core",
      ]
    }
  }

  if (enable_brave_webtorrent) {
    deps += [
      "//express/browser/extensions",
      "//express/components/brave_webtorrent/browser",
    ]
  }
}
