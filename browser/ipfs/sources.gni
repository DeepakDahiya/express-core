if (enable_ipfs) {
  brave_browser_ipfs_sources += [
    "//express/browser/ipfs/content_browser_client_helper.cc",
    "//express/browser/ipfs/content_browser_client_helper.h",
    "//express/browser/ipfs/import/ipfs_import_controller.cc",
    "//express/browser/ipfs/import/ipfs_import_controller.h",
    "//express/browser/ipfs/import/save_package_observer.cc",
    "//express/browser/ipfs/import/save_package_observer.h",
    "//express/browser/ipfs/ipfs_blob_context_getter_factory.cc",
    "//express/browser/ipfs/ipfs_blob_context_getter_factory.h",
    "//express/browser/ipfs/ipfs_dns_resolver_impl.cc",
    "//express/browser/ipfs/ipfs_dns_resolver_impl.h",
    "//express/browser/ipfs/ipfs_host_resolver.cc",
    "//express/browser/ipfs/ipfs_host_resolver.h",
    "//express/browser/ipfs/ipfs_service_factory.cc",
    "//express/browser/ipfs/ipfs_service_factory.h",
    "//express/browser/ipfs/ipfs_subframe_navigation_throttle.cc",
    "//express/browser/ipfs/ipfs_subframe_navigation_throttle.h",
    "//express/browser/ipfs/ipfs_tab_helper.cc",
    "//express/browser/ipfs/ipfs_tab_helper.h",
  ]

  brave_browser_ipfs_deps += [
    "//base",
    "//express/browser/profiles:util",
    "//express/common",
    "//express/components/ipfs",
    "//express/components/services/ipfs/public/mojom",
