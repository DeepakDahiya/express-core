    brave_browser_ipfs_sources += [
      "//express/browser/ipfs/ipfs_local_pin_service_factory.cc",
      "//express/browser/ipfs/ipfs_local_pin_service_factory.h",
    ]
  }

  if (enable_extensions) {
    brave_browser_ipfs_deps += [
      "//extensions/browser",
      "//extensions/common",
    ]
  }
