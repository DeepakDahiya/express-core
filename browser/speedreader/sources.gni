import("//express/components/speedreader/common/buildflags/buildflags.gni")

brave_browser_speedreader_sources = []
brave_browser_speedreader_deps = []

if (enable_speedreader) {
  brave_browser_speedreader_sources += [
    "//express/browser/speedreader/page_distiller.cc",
    "//express/browser/speedreader/page_distiller.h",
    "//express/browser/speedreader/speedreader_service_factory.cc",
    "//express/browser/speedreader/speedreader_service_factory.h",
    "//express/browser/speedreader/speedreader_tab_helper.cc",
    "//express/browser/speedreader/speedreader_tab_helper.h",
  ]

  brave_browser_speedreader_deps += [
    "//base",
    "//express/components/speedreader",
    "//chrome/browser/profiles:profile",
    "//components/keyed_service/content",
    "//components/keyed_service/core",
    "//content/public/browser",
  ]

  if (is_android) {
    brave_browser_speedreader_sources +=
        [ "//express/browser/android/speedreader/speedreader_utils.cc" ]

    brave_browser_speedreader_deps += [ "//express/build/android:jni_headers" ]
  }
}
